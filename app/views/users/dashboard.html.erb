<div class="row">
  <div class="col-2">
    <div class="nav nav-tabs flex-column tab-buttons-progresshub m-2" id="nav-tab" role="tablist" aria-orientation="vertical">
      <a class="nav-link active mb-1" id="nav-act-proj-tab" data-toggle="tab" href="#nav-act-proj" role="tab" aria-controls="nav-act-proj" aria-selected="true">Active</a>
      <a class="nav-link mb-1" id="nav-achieved-tab" data-toggle="tab" href="#nav-achieved" role="tab" aria-controls="nav-achieved" aria-selected="false">Achieved</a>
    </div>
  </div>
  <div class="col-6">
    <div class="tab-content tab-contents-progresshub" id="nav-tabContent">
      <div class="tab-pane fade show active" id="nav-act-proj" role="tabpanel" aria-labelledby="nav-act-proj-tab">
        <div class="tab-user-project-act-proj">
          <h1>Active Projects</h1>
          <% @active_projects.each do |user_project| %>
            <p><%= user_project.project.title %></p>
          <% end %>
        </div>
      </div>
      <div class="tab-pane fade p-5" id="nav-achieved" role="tabpanel" aria-labelledby="nav-achieved-tab">
        <h1>Finished Projects</h1>
        <% @finished_projects.each do |user_project| %>
          <p><%= user_project.project.title %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>
