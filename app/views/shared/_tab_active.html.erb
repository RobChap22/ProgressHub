<div class="tab-pane fade show active" id="nav-act-proj" role="tabpanel" aria-labelledby="nav-act-proj-tab">
  <div class="tab-user-project-act-proj">
    <% active_projects.each do |active_project| %>
      <%= link_to user_project_path(active_project) do %>
        <div class="card-proj-dashbord">
          <%= cl_image_tag active_project.project.photo.key, alt: "alttext", width: 120, height: 120, crop: :thumb %>
          <div class="card-proj-infos w-100">
            <div class="proj-info-text">
              <h2><%= active_project.project.title %></h2>
              <div class="d-flex justify-content-between">
                <div><p><strong><%= active_project.last_completed %> / <%= active_project.project.project_steps.count %> steps completed</strong></p></div>
                <div><p>Next step: <%= active_project.next_step_header %></p></div>
              </div>
            </div>
            <div class="progress mt-2">
              <div class="progress-bar bg-info" role="progressbar" style="width: <%= active_project.percent_completed %>%" aria-valuenow="" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
          </div>
        </div>
      <% end  %>
    <% end %>
  </div>
</div>


