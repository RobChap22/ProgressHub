<div class="navbar-wagon <%= yield(:navbar_class) %>">
  <!-- NAVBAR CONTENT -->

  <div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="d-flex align-items-center">
    <h1><%= link_to "ProgressHub", root_path, class: "nav-link" %></h1>
    <input class="search__input" type="text" placeholder="Search..">
  </div>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>


    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <% if user_signed_in? %>
          <li class="nav-item active">
            <%= link_to "My Projects", "projects_path", class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Community", "#", class: "nav-link" %>
          </li>
          <li class="nav-item dropdown">
            <%= cl_image_tag current_user.photo.key, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <%= link_to "Action", "#", class: "dropdown-item" %>
              <%= link_to "Another action", "#", class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link btn btn-primary" %>
          </li>
          <li class="nav-item ml-2">
            <%= link_to "Register", new_user_registration_path, class: "nav-link btn btn-warning" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
